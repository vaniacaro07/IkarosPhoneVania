<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <enlace href="https: //fonts.googleapis.com/css2? family= Poppins:wght@300 & family= Roboto:wght@300 & display=swap" rel="hoja de estilo"></enlace>
        <script src="https://kit.fontawesome.com/5309449a51.js" crossorigin="anonymous"></script>
        <!-- linkeamos CSS -->
        <link rel="stylesheet" href="/css/productCreate.css">
    </head>
<body>
    <%- include('./partials/header'); %>
    <main >

        <div class="title">
            <h2 class="product-title">Crear producto </h2>
        </div>

        <div class="form-create">

			<form action="/create" method="POST" enctype="multipart/form-data" >

				<div class="group generals">
					<div class="name">
						<label for="name">Marca:</label>
						<input type="text" id="name" name="name" class="form-input">
					</div>
					<div class="name">
						<label for="name">Modelo:</label>
						<input type="text" id="name" name="name" class="form-input">
					</div>
					<div>
						<label for="price">Precio:</label>
						<input type="text" id="price" name="price" class="form-input">
					</div>
					<div>
						<label for="discount">Descuento:</label>
						<input type="text" id="discount" name="discount" class="form-input">
					</div>
				</div>

				<div class="group screen">
					<div>
						<label for="resolution">Resolución:</label>
						<input type="text" id="resolution" name="resolution" class="form-input">
					</div>
					<div>
						<label for="screen">Tamaño:</label>
						<input type="text" id="screen" name="screen"  class="form-input">
					</div>		
				</div>

				<div class="group camera">
					<div>
						<label for="camera">Cámara:</label>
						<input type="text" id="camera" name="camera" class="form-input">
					</div>
					<div>
						<label for="frontalCamera">Cámara frontal:</label>
						<input type="text" id="frontalCamera" name="frontalCamera" class="form-input">
					</div>
					<div class="recorder">
						<label for="recorder">Resolución de video:</label>
						<input type="text" id="recorder" name="recorder" class="form-input">
					</div>					
				</div>

				<div class="group system">
					<div>
						<label for="rom" >Memoria interna:</label>
						<input type="text" id="rom" name="rom" >
					</div>
					<div>
						<label for="ram" >RAM:</label>
						<input type="text" id="ram" name="ram" >
					</div>
					<div>
						<label for="externalMemory">Memoria externa:</label>
						<input type="text" id="externalMemory" name="externalMemory" class="form-input">
					</div>
					<div>
						<label for="system">Sistema operativo:</label>
						<input type="text" id="system" name="system" >
					</div>
				</div>
					
				<div class="group category">
					<label for="category">Categoría:</label>
					<select name="category" id="category">
						<option value="" disabled> Selecionar categoría </option>
						<option value="in-sale" <%= product.category === 'in-sale' ? 'selected' : '' %> >En oferta</option>
						<option value="smartphone" <%= product.category === 'smartphone' ? 'selected' : '' %> >Ultimos visitados</option>
					</select>
				</div>					
					
				<div class="group image">
					<label for="image">Imagen</label>
					<input type="file" name="image" >
				</div>

				<div class="group description">
					<label for="description">Descipción:</label>
					<textarea name="description" id="description"></textarea>
				</div>
					<div>
						<button type="submit" class="btn-create">Guardar producto</button>
					</div>
				</div>

			</form>
		</div>
    </main>
    <footer>
        <%- include ("./partials/footer")  %> 
    </footer>
</body>
</html>